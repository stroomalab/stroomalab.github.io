  shorttitle = {Interleukin-1{$\beta$} {{Modulation}} of the {{Mechanobiology}} of {{Primary Human Pulmonary Fibroblasts}}},
  author = {Gabasa, Marta and Arshakyan, Marselina and Llorente, Alejandro and {Chuli{\'a}-Peris}, Lourdes and Pavelescu, Irina and Xaubet, Antoni and Pereda, Javier and Alcaraz, Jordi},
