  keywords = {Actins,Adolescent,Adult,Biomechanical Phenomena,cell mechanics,Cell Movement,Cell Proliferation,Cells Cultured,collagen,Collagen Type I,Collagen Type I alpha 1 Chain,Collagen Type III,Cyclooxygenase 2,Elasticity,Female,Fibroblasts,Humans,IL-1,Interleukin-1beta,Lung,Male,Microscopy Atomic Force,MMPs,pulmonary fibroblasts,Regeneration,repair,RNA Messenger,Wound Healing,Young Adult}
}

@article{gabasaMMP1DrivesTumor2021,
  title = {{{MMP1}} Drives Tumor Progression in Large Cell Carcinoma of the Lung through Fibroblast Senescence},
  author = {Gabasa, Marta and Radisky, Evette S. and Ikemori, Rafael and Bertolini, Giulia and Arshakyan, Marselina and Hockla, Alexandra and Duch, Paula and Rondinone, Ornella and Llorente, Alejandro and Maqueda, Maria and Davalos, Albert and Gavil{\'a}n, Elena and Perera, Alexandre and Ram{\'i}rez, Josep and Gasc{\'o}n, Pere and Reguart, Noem{\'i} and Roz, Luca and Radisky, Derek C. and Alcaraz, Jordi},
  year = 2021,
