@article{salaAbrogationMyofibroblastActivities2019,
  title = {Abrogation of Myofibroblast Activities in Metastasis and Fibrosis by Methyltransferase Inhibition},
  author = {Sala, Laura and {Franco-Valls}, H{\'e}ctor and Stanisavljevic, Jelena and Curto, Josue and Verg{\'e}s, Jordi and Pe{\~n}a, Ra{\'u}l and Duch, Paula and Alcaraz, Jordi and {Garc{\'i}a de Herreros}, Antonio and Baulida, Josep},
  year = 2019,
  month = dec,
  journal = {International Journal of Cancer},
  volume = {145},
