  author = {Lugo, Roberto and Gabasa, Marta and Andriani, Francesca and Puig, Marta and Facchinetti, Federica and Ram{\'i}rez, Josep and {G{\'o}mez-Caro}, Abel and Pastorino, Ugo and Fuster, Gemma and Almendros, Isaac and Gasc{\'o}n, Pere and Davalos, Albert and Reguart, Noem{\'i} and Roz, Luca and Alcaraz, Jordi},
